{
  "openapi": "3.0.1",
  "info": {
    "title": "Payment Options API",
    "description": "API for Hosted Payment Pages (HPP).",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api-dev.paymentoptions.com/api/v1"
    }
  ],
  "paths": {
    "/api/v1/server-to-server-interface/hpp/generate/link": {
      "$ref": "./generatehpp.json"
    },
    "/api/v1/server-to-server-interface/hpp/validate": {
      "$ref": "./paths/hpp-validate.json"
    }
  },
  "components": {
    "securitySchemes": {
      "apiKeyAuth": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header",
        "description": "API Key for Authorization."
      },
      "xApiKeyAuth": {
        "type": "apiKey",
        "name": "x-api-key",
        "in": "header",
        "description": "API Key specific to x-api-key."
      }
    }
  }
}