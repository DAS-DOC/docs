{
  "openapi": "3.0.1",
  "info": {
    "title": "Payment Options API",
    "description": "API for generating Hosted Payment Page (HPP) links and processing payments.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api-dev.paymentoptions.com/api/v1"
    }
  ],
  "security": [
    {
      "apiKeyAuth": [],
      "xApiKeyAuth": []
    }
  ],
  "paths": {
    "/api/v1/server-to-server-interface/hpp/generate/link": {
      "post": {
        "summary": "Generate HPP Link",
        "description": "This endpoint allows you to generate a Hosted Payment Page (HPP) link.",
        "operationId": "generateHppLink",
        "requestBody": {
          "description": "The request payload to generate an HPP link.",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                    "return_url": {
                      "type": "object",
                      "description": "A JSON object containing the Return URL.",
                      "properties": {
                        "webhook_url": { 
                          "type": "string", 
                          "maxLength": 255, 
                          "description": "The webhook URL link.", 
                          "example": "https://webhook.site/" 
                        },
                        "success_url": { 
                          "type": "string", 
                          "maxLength": 255, 
                          "description": "The redirect URL link after payment gets successful.", 
                          "example": "http://www.successurl.com/" 
                        },
                        "decline_url": { 
                          "type": "string", 
                          "maxLength": 255, 
                          "description": "The redirect URL link after payment gets failed.", 
                          "example": "http://www.declineurl.com/" 
                        },
                        "cancel_url": { 
                          "type": "string", 
                          "maxLength": 255, 
                          "description": "The cancel URL link after payment gets cancelled.", 
                          "example": "http://cancelurl.com/" 
                        }
                      }
                    },
                    "amount": { 
                      "type": "number", 
                      "nullable": true, 
                      "maxLength": "as per Bank", 
                      "description": "The amount of the transaction. If passed \"\", cardholder enters amount manually in HPP.",
                      "example": 1000 
                    },
                    "currency": { 
                      "type": "string", 
                      "maxLength": 3, 
                      "description": "The abbreviation of the processing currency (e.g., JPY for Japanese Yen).",
                      "example": "JPY", 
                      "default": "JPY" 
                    },
                    "merchant_id": { 
                      "type": "string", 
                      "description": "The merchant ID (DASMID).", 
                      "maxLength": 128, 
                      "example": "JP00000275" 
                    },
                    "merchant_email": { 
                      "type": "string", 
                      "description": "The email address of the Merchant.",
                      "maxLength": 45, 
                      "example": "merchant@testemail.com" 
                    },
                    "merchant_txn_ref": { 
                      "type": "string", 
                      "description": "The merchant transaction reference ID.",
                      "maxLength": 45, 
                      "example": "2003089893366DTEST" 
                    },
                    "payment_method": {
                      "type": "object",
                      "description": "A JSON object containing Payment Method.",
                      "properties": {
                        "type": { 
                          "type": "string", 
                          "maxLength": 128, 
                          "description": "The payment method type, e.g., “scheme” for credit cards or wallet options.",
                          "example": "scheme" 
                        },
                        "store_payment_method": { 
                          "type": "boolean", 
                          "description": "True to generate a token, or False not to generate one.",
                          "example": true 
                        }
                      }
                    },
                    "billing_address": {
                      "type": "object",
                      "description": "A JSON object containing the billing address of the cardholder.",
                      "properties": {
                        "country": { 
                          "type": "string", 
                          "maxLength": 2, 
                          "description": "The cardholder’s billing country code.",
                          "example": "JP" 
                        },
                        "email": { 
                          "type": "string", 
                          "maxLength": 45, 
                          "description": "The cardholder’s billing email address.",
                          "example": "billing@testemail.com" 
                        },
                        "phone": { 
                          "type": "string", 
                          "maxLength": 15, 
                          "description": "The cardholder’s billing phone number.",
                          "example": "8112345678" 
                        },
                        "address1": { 
                          "type": "string", 
                          "maxLength": 199, 
                          "description": "The cardholder’s billing address line.",
                          "example": "1-2-3 Shinjuku" 
                        },
                        "city": { 
                          "type": "string", 
                          "maxLength": 65, 
                          "description": "The cardholder’s billing city.",
                          "example": "Shinjuku-ku" 
                        },
                        "state": { 
                          "type": "string", 
                          "maxLength": 65, 
                          "description": "The cardholder’s billing state.",
                          "example": "Tokyo" 
                        },
                        "postal_code": { 
                          "type": "string", 
                          "maxLength": 45, 
                          "description": "The cardholder’s billing postal code.",
                          "example": "1600022" 
                        }
                      }
                    },
                    "shipping_address": {
                      "type": "object",
                      "description": "A JSON object containing the shipping address of the cardholder.",
                      "properties": {
                        "country": { 
                          "type": "string", 
                          "maxLength": 2, 
                          "description": "The cardholder’s shipping country code.",
                          "example": "JP" 
                        },
                        "email": { 
                          "type": "string", 
                          "maxLength": 45, 
                          "description": "The cardholder’s shipping email address.",
                          "example": "shipping@testemail.com" 
                        },
                        "phone": { 
                          "type": "string", 
                          "maxLength": 20, 
                          "description": "The cardholder’s shipping phone number.",
                          "example": "8112345678" 
                        },
                        "address1": { 
                          "type": "string", 
                          "maxLength": 199, 
                          "description": "The cardholder’s shipping address line.",
                          "example": "1-2-3 Shinjuku" 
                        },
                        "city": { 
                          "type": "string", 
                          "maxLength": 65, 
                          "description": "The cardholder’s shipping city.",
                          "example": "Shinjuku-ku" 
                        },
                        "state": { 
                          "type": "string", 
                          "maxLength": 65, 
                          "description": "The cardholder’s shipping state.",
                          "example": "Tokyo" 
                        },
                        "postal_code": { 
                          "type": "string", 
                          "maxLength": 45, 
                          "description": "The cardholder’s shipping postal code.",
                          "example": "1600022" 
                        }
                      }
                    }
                  },
                "required": ["return_url", "currency", "merchant_id", "amount"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "HPP link generated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "string", "example": "6469eb3a-812a-4262-9f7c-2328a71b16c5", "description": "The transaction reference ID
" },
                    "url": { "type": "string", "example": "https://checkout-dev.paymentoptions.com/jp/HostedPaymentPage/aPT5J_0d" },
                    "amount": { "type": "string", "example": "1000" },
                    "currency": { "type": "string", "example": "JPY" },
                    "merchant_txn_ref": { "type": "string", "example": "2003089893366DTEST" },
                    "merchant_id": { "type": "string", "example": "JP00000275" },
                    "merchant_email": { "type": "string", "example": "info@tinkfactory.com" },
                    "return_url": {
                      "type": "object",
                      "properties": {
                        "webhook_url": { "type": "string", "example": "https://webhook.site/3a0a9c01-cf27-40c7-ade4-28abdcba087b" },
                        "success_url": { "type": "string", "example": "https://www.bing.com/" },
                        "decline_url": { "type": "string", "example": "https://www.google.com/" },
                        "cancel_url": { "type": "string", "example": "https://tinkfactory.com/" }
                      }
                    },
                    "billing_address": {
                      "type": "object",
                      "properties": {
                        "city": { "type": "string", "example": "Ebene" },
                        "email": { "type": "string", "example": "kavi@ghunowa.com" },
                        "state": { "type": "string", "example": "Rose-Hill" },
                        "country": { "type": "string", "example": "" },
                        "address1": { "type": "string", "example": "Ebene Junction" },
                        "postal_code": { "type": "string", "example": "1234567" },
                        "phone_number": { "type": "string", "example": "52553305" }
                      }
                    },
                    "shipping_address": {
                      "type": "object",
                      "properties": {
                        "city": { "type": "string", "example": "Ebene" },
                        "email": { "type": "string", "example": "kavi@ghunowa.com" },
                        "state": { "type": "string", "example": "Rose-Hill" },
                        "country": { "type": "string", "example": "" },
                        "address1": { "type": "string", "example": "Ebene Junction" },
                        "postal_code": { "type": "string", "example": "1234567" },
                        "phone_number": { "type": "string", "example": "52553305" }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid request"
          }
        }
      }
    },
    "/api/v1/server-to-server-interface/payment": {
      "post": {
        "summary": "Process Payment",
        "description": "This endpoint allows you to process a payment using card details.",
        "operationId": "processPayment",
        "requestBody": {
          "description": "The request payload to process a payment.",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "amount": { "type": "string", "example": "1999" },
                  "currency": { "type": "string", "example": "JPY" },
                  "card": {
                    "type": "object",
                    "properties": {
                      "cvc": { "type": "string", "example": "100" },
                      "expiry_month": { "type": "string", "example": "12" },
                      "expiry_year": { "type": "string", "example": "24" },
                      "name": { "type": "string", "example": "Kavi G" },
                      "number": { "type": "string", "example": "5200000000001005" }
                    }
                  },
                  "payment_method": {
                    "type": "object",
                    "properties": {
                      "type": { "type": "string", "example": "scheme" },
                      "store_payment_method": { "type": "boolean", "example": false }
                    }
                  },
                  "merchant_txn_ref": { "type": "string", "example": "qwe" },
                  "customer_ip": { "type": "string", "example": "10.10.0.0" },
                  "merchant_id": { "type": "string", "example": "JP00000275" },
                  "return_url": {
                    "type": "object",
                    "properties": {
                      "webhook_url": { "type": "string", "example": "https://webhook.site/3a0a9c01-cf27-40c7-ade4-28abdcba087b" },
                      "success_url": { "type": "string", "example": "https://www.google.com/" },
                      "decline_url": { "type": "string", "example": "https://www.bing.com/" },
                      "cancel_url": { "type": "string", "example": "https://www.bing.com/" }
                    }
                  },
                  "billing_address": {
                    "type": "object",
                    "properties": {
                      "country": { "type": "string", "example": "JP" },
                      "email": { "type": "string", "example": "kavi@ghunowa.com" },
                      "phone_number": { "type": "string", "example": "52553305" },
                      "address1": { "type": "string", "example": "Oxford Road" },
                      "city": { "type": "string", "example": "Tokyo" },
                      "state": { "type": "string", "example": "Rose-Hill" },
                      "postal_code": { "type": "string", "example": "205701" }
                    }
                  },
                  "shipping_address": {
                    "type": "object",
                    "properties": {
                      "country": { "type": "string", "example": "JP" },
                      "email": { "type": "string", "example": "kavi@ghunowa.com" },
                      "phone_number": { "type": "string", "example": "52553305" },
                      "address1": { "type": "string", "example": "Oxford Road" },
                      "city": { "type": "string", "example": "Tokyo" },
                      "state": { "type": "string", "example": "Rose-Hill" },
                      "postal_code": { "type": "string", "example": "205701" }
                    }
                  },
                  "browser_info": {
                    "type": "object",
                    "properties": {
                      "acceptHeader": { "type": "string", "example": "text/html" },
                      "screenColorDepth": { "type": "string", "example": "48" },
                      "javaEnabled": { "type": "boolean", "example": false },
                      "language": { "type": "string", "example": "de" },
                      "screenHeight": { "type": "string", "example": "1200" },
                      "screenWidth": { "type": "string", "example": "1600" },
                      "challengeWindow": { "type": "string", "example": "4" },
                      "userAgent": { "type": "string", "example": "Mozilla/4.0 (MSIE 6.0; Windows NT 5.0)" }
                    }
                  },
                  "time_zone": { "type": "string", "example": "Asia/Kuala_Lumpur" }
                },
                "required": ["amount", "currency", "card", "payment_method", "merchant_txn_ref", "customer_ip", "merchant_id", "return_url", "billing_address"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Payment processed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean", "example": true },
                    "status_code": { "type": "integer", "example": 201 },
                    "is_live": { "type": "boolean", "example": false },
                    "transaction_type": { "type": "string", "example": "CAPTURE" },
                    "gateway_response": {
                      "type": "object",
                      "properties": {
                        "version": { "type": "string", "example": "1" },
                        "type": { "type": "string", "example": "INFO" },
                        "message": { "type": "string", "example": "Payment Successful." },
                        "code": { "type": "string", "example": "INFO0000" }
                      }
                    },
                    "merchant_details": {
                      "type": "object",
                      "properties": {
                        "legal_name": { "type": "string", "example": "Tink15 Factory" },
                        "mid": { "type": "string", "example": "JP00000275" },
                        "merchant_txn_ref": { "type": "string", "example": "qwe" },
                        "billing_details": {
                          "type": "object",
                          "properties": {
                            "billing_address": {
                              "type": "object",
                              "properties": {
                                "country": { "type": "string", "example": "JP" },
                                "email": { "type": "string", "example": "kavi@ghunowa.com" },
                                "phone_number": { "type": "string", "example": "52553305" },
                                "address1": { "type": "string", "example": "Oxford Road" },
                                "city": { "type": "string", "example": "Tokyo" },
                                "state": { "type": "string", "example": "Rose-Hill" },
                                "postal_code": { "type": "string", "example": "205701" }
                              }
                            },
                            "shipping_address": {
                              "type": "object",
                              "properties": {
                                "country": { "type": "string", "example": "JP" },
                                "email": { "type": "string", "example": "kavi@ghunowa.com" },
                                "phone_number": { "type": "string", "example": "52553305" },
                                "address1": { "type": "string", "example": "Oxford Road" },
                                "city": { "type": "string", "example": "Tokyo" },
                                "state": { "type": "string", "example": "Rose-Hill" },
                                "postal_code": { "type": "string", "example": "205701" }
                              }
                            }
                          }
                        },
                        "device_details": {
                          "type": "object",
                          "properties": {
                            "visited_ip": { "type": "string", "example": "10.10.0.0" },
                            "customer_ip": { "type": "string", "example": "102.119.120.86" }
                          }
                        }
                      }
                    },
                    "payment_details": {
                      "type": "object",
                      "properties": {
                        "amount": { "type": "number", "example": 2000 },
                        "response_code": { "type": "integer", "example": 0 },
                        "auth_code": { "type": "string", "example": "315473" },
                        "currency": { "type": "string", "example": "JPY" },
                        "payment_method": { "type": "string", "example": "ECMC-SSL" },
                        "scheme": { "type": "string", "example": "MASTERCARD" },
                        "card": {
                          "type": "object",
                          "properties": {
                            "name": { "type": "string", "example": "Kavi G" },
                            "number": { "type": "string", "example": "520000******1005" },
                            "exp_month": { "type": "string", "example": "12" },
                            "exp_year": { "type": "string", "example": "24" }
                          }
                        },
                        "additional_data": {
                          "type": "object",
                          "properties": {
                            "payment_data_source": {
                              "type": "object",
                              "properties": {
                                "type": { "type": "string", "example": "card" }
                              }
                            }
                          }
                        }
                      }
                    },
                    "transaction_details": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "string", "example": "849effe0-eeea-4378-88e0-833f41625912" },
                        "ref": { "type": "integer", "example": 70178 },
                        "timestamp": { "type": "string", "example": "2024-09-30T20:58:58.000Z" },
                        "merchant_txn_ref": { "type": "string", "example": "qwe" },
                        "stored_payment_method_id": { "type": "string", "example": null }
                      }
                    },
                    "risk-details": {
                      "type": "object",
                      "properties": {
                        "risk_score": { "type": "integer", "example": null }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid request"
          }
        }
      }
    }
  },
  "components": {
  "securitySchemes": {
    "apiKeyAuth": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header",
      "description": "API Key for Authorization. Format: 'Basic YOUR_API_KEY_HERE'"
    },
    "xApiKeyAuth": {
      "type": "apiKey",
      "name": "x-api-key",
      "in": "header",
      "description": "API Key specific to x-api-key."
    }
  }
}
}